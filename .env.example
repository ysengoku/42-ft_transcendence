# Database settings
POSTGRES_USER=your_username        # Database user (e.g. admin)
POSTGRES_PASSWORD=your_password    # User's password
POSTGRES_DB=your_database_name     # Database name

# Connection string format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@database:5432/${POSTGRES_DB}

# Server settings
BACKEND_PORT=8000    # API server port
BACKEND_HOST=0.0.0.0 # Accept all incoming connections

# Frontend settings
VITE_BACKEND_URL=http://localhost:8000  # API endpoint for frontend calls

# Web server settings
NGINX_PORT=1026  # Nginx listening port